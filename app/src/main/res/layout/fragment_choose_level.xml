<?xml version="1.0" encoding="utf-8"?>

<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">


        <androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_movie"
    android:scaleType="centerCrop"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    tools:context=".fragments.ChooseLevelFragment">


        <TextView
            android:id="@+id/score"
            android:layout_width="101dp"
            android:layout_height="50dp"
            android:layout_marginTop="36dp"
            android:background="@drawable/text_view_designed"
            android:gravity="center"
            android:text="0"
            android:textColor="@color/white"
            android:fontFamily="@font/turretroadbold"
            android:textSize="30dp"
            android:typeface="monospace"
            app:autoSizeMaxTextSize="30sp"
            app:autoSizeMinTextSize="10sp"
            app:autoSizeTextType="uniform"
            app:layout_constraintBottom_toTopOf="@+id/ChooseTitle"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.9"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />


        <Button
            android:id="@+id/LEVEL1"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_marginTop="85dp"
            android:background="@drawable/button_designed"
            android:text="LEVEL 1"
            android:textColor="@color/white"
            android:textSize="25dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.501"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.374" />

        <Button
            android:id="@+id/LEVEL3"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_marginTop="85dp"
            android:background="@drawable/button_designed"
            android:text="LEVEL 3"
            android:textColor="@color/white"
            android:textSize="25dp"
            android:gravity="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.627">
        </Button>

        <Button
            android:id="@+id/LEVEL2"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_marginTop="85dp"
            android:background="@drawable/button_designed"
            android:text="LEVEL 2"
            android:textColor="@color/white"
            android:textSize="25dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/ChooseTitle"
            android:layout_width="350dp"
            android:layout_height="100dp"
            android:layout_marginTop="85dp"
            android:background="@drawable/text_view_designed"
            android:src="@drawable/locked"
            android:fontFamily="@font/turretroadbold"
            android:text="CHOOSE:"
            android:textColor="@color/white"
            android:textSize="55dp"
            android:typeface="monospace"
            android:gravity="center"
            app:autoSizeMaxTextSize="55sp"
            app:autoSizeMinTextSize="25sp"
            app:autoSizeTextType="uniform"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.13" />

        <Button
            android:id="@+id/back"
            android:layout_width="70dp"
            android:layout_height="50dp"
            android:background="@drawable/button_designed"
            android:drawableTop="@drawable/back_arrow"
            app:layout_constraintBottom_toTopOf="@+id/ChooseTitle"
            app:layout_constraintEnd_toStartOf="@+id/score"
            app:layout_constraintHorizontal_bias="0.165"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.315" />

        <ImageView
            android:id="@+id/lock"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/locked"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.097"
            app:layout_constraintStart_toEndOf="@+id/LEVEL3"
            app:layout_constraintTop_toBottomOf="@+id/ChooseTitle"
            app:layout_constraintVertical_bias="0.476" />

                <ImageView
                    android:id="@+id/check1"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/checkmark"
                    android:visibility="invisible"
                    app:layout_constraintBottom_toTopOf="@+id/check2"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.086"
                    app:layout_constraintStart_toEndOf="@+id/LEVEL1"
                    app:layout_constraintTop_toBottomOf="@+id/ChooseTitle"
                    app:layout_constraintVertical_bias="0.555" />

                <ImageView
                    android:id="@+id/check2"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/checkmark"
                    android:visibility="invisible"
                    app:layout_constraintBottom_toTopOf="@+id/lock"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.086"
                    app:layout_constraintStart_toEndOf="@+id/LEVEL2"
                    app:layout_constraintTop_toBottomOf="@+id/ChooseTitle"
                    app:layout_constraintVertical_bias="0.738" />

                <ImageView
                    android:id="@+id/check3"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/checkmark"
                    android:visibility="invisible"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.097"
                    app:layout_constraintStart_toEndOf="@+id/LEVEL3"
                    app:layout_constraintTop_toBottomOf="@+id/check2"
                    app:layout_constraintVertical_bias="0.174" />


        </androidx.constraintlayout.widget.ConstraintLayout>
</layout>