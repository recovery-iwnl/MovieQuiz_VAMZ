<?xml version="1.0" encoding="utf-8"?>

<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/background_movie"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:context=".fragments.MenuFragment">

                <TextView
                    android:id="@+id/score"
                    android:layout_width="101dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="36dp"
                    android:background="@drawable/text_view_designed"
                    android:fontFamily="@font/turretroadbold"
                    android:gravity="center"
                    android:text="0"
                    android:textColor="@color/white"
                    android:textSize="30dp"
                    android:typeface="monospace"
                    app:autoSizeMaxTextSize="30sp"
                    app:autoSizeMinTextSize="10sp"
                    app:autoSizeTextType="uniform"
                    app:layout_constraintBottom_toTopOf="@+id/MovieQuiz"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.90"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.0" />

                <Button
                    android:id="@+id/playButton"
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="85dp"
                    android:background="@drawable/button_designed"
                    android:text="PLAY"
                    android:textColor="@color/white"
                    android:textSize="25dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <Button
                    android:id="@+id/settingButton"
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="85dp"
                    android:background="@drawable/button_designed"
                    android:text="SETTINGS"
                    android:textColor="@color/white"
                    android:textSize="25dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.498"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.627" />

                <TextView
                    android:id="@+id/MovieQuiz"
                    android:layout_width="350dp"
                    android:layout_height="125dp"
                    android:layout_marginTop="85dp"
                    android:background="@drawable/text_view_designed"
                    android:fontFamily="@font/turretroadbold"
                    android:gravity="center"
                    android:text="MOVIE QUIZ"
                    android:textColor="@color/white"
                    android:textSize="55dp"
                    android:typeface="monospace"
                    app:autoSizeMaxTextSize="55sp"
                    app:autoSizeMinTextSize="10sp"
                    app:autoSizeTextType="uniform"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.13" />

        </androidx.constraintlayout.widget.ConstraintLayout>
</layout>