<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">


<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_movie"
    android:scaleType="centerCrop"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    tools:context=".fragments.ChooseLevelFragment">

    <TextView
        android:id="@+id/other"
        android:layout_width="203dp"
        android:layout_height="49dp"
        android:background="@drawable/text_view_designed"
        android:fontFamily="@font/turretroadbold"
        android:src="@drawable/locked"
        android:text="OTHERS:"
        android:textColor="@color/white"
        android:textSize="30dp"
        android:typeface="monospace"
        android:gravity="center"
        app:autoSizeMaxTextSize="30sp"
        app:autoSizeMinTextSize="10sp"
        app:autoSizeTextType="uniform"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sounds"
        app:layout_constraintVertical_bias="0.3" />

    <TextView
        android:id="@+id/score"
        android:layout_width="101dp"
        android:layout_height="50dp"
        android:layout_marginTop="36dp"
        android:background="@drawable/text_view_designed"
        android:text="0"
        android:textColor="@color/white"
        android:textSize="25dp"
        android:gravity="center"
        android:fontFamily="@font/turretroadbold"
        android:typeface="monospace"
        app:autoSizeMaxTextSize="30sp"
        app:autoSizeMinTextSize="10sp"
        app:autoSizeTextType="uniform"
        app:layout_constraintBottom_toTopOf="@+id/settingTitle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.9"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />



    <Button
        android:id="@+id/settingTitle"
        android:layout_width="350dp"
        android:layout_height="100dp"
        android:layout_marginTop="85dp"
        android:background="@drawable/text_view_designed"
        android:fontFamily="@font/turretroadbold"
        android:text="SETTINGS:"
        android:textColor="@color/white"
        android:textSize="55sp"
        android:typeface="monospace"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.13" />

    <TextView
        android:id="@+id/sounds"
        android:layout_width="203dp"
        android:layout_height="49dp"
        android:layout_marginTop="85dp"
        android:background="@drawable/text_view_designed"
        android:fontFamily="@font/turretroadbold"
        android:text="SOUNDS:"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:typeface="monospace"
        android:gravity="center"
        app:autoSizeMaxTextSize="30sp"
        app:autoSizeMinTextSize="10sp"
        app:autoSizeTextType="uniform"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.365" />

    <Button
        android:id="@+id/back"
        android:layout_width="70dp"
        android:layout_height="50dp"
        android:background="@drawable/button_designed"
        android:drawableTop="@drawable/back_arrow"
        app:layout_constraintBottom_toTopOf="@+id/settingTitle"
        app:layout_constraintEnd_toStartOf="@+id/score"
        app:layout_constraintHorizontal_bias="0.165"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.315" />

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/mute"
        android:layout_width="114dp"
        android:layout_height="37dp"
        android:background="@drawable/button_designed"
        android:text="MUTE"
        android:fontFamily="@font/turretroadbold"
        android:gravity="center"
        android:textColor="@color/white"
        android:typeface="monospace"
        app:autoSizeMaxTextSize="20sp"
        app:autoSizeMinTextSize="10sp"
        app:autoSizeTextType="uniform"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sounds"
        app:layout_constraintVertical_bias="0.085"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:ellipsize="end"/>

    <Button
        android:id="@+id/resetScore"
        android:layout_width="114dp"
        android:layout_height="37dp"
        android:background="@drawable/button_designed"
        android:fontFamily="@font/turretroadbold"
        android:gravity="center"
        android:text="RESET GAME"
        android:textColor="@color/white"
        android:typeface="monospace"
        app:autoSizeMaxTextSize="15sp"
        app:autoSizeMinTextSize="10sp"
        app:autoSizeTextType="uniform"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/other"
        app:layout_constraintVertical_bias="0.149"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:ellipsize="end"/>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>