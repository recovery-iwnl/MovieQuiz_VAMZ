<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">


<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_movie"
    android:scaleType="centerCrop"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    tools:context=".fragments.ChooseLevelFragment">



    <TextView
        android:id="@+id/score"
        android:layout_width="101dp"
        android:layout_height="50dp"
        android:layout_marginTop="36dp"
        android:background="@drawable/text_view_designed"
        android:textSize="25dp"
        android:gravity="center"
        android:text="0"
        android:textColor="@color/white"
        android:fontFamily="@font/turretroadbold"
        android:typeface="monospace"
        app:autoSizeMaxTextSize="30sp"
        app:autoSizeMinTextSize="10sp"
        app:autoSizeTextType="uniform"
        app:layout_constraintBottom_toTopOf="@+id/Level1Title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.9"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/Level1Title"
        android:layout_width="350dp"
        android:layout_height="100dp"
        android:layout_marginTop="85dp"
        android:background="@drawable/text_view_designed"
        android:fontFamily="@font/turretroadbold"
        android:text="LEVEL 1"
        android:textColor="@color/white"
        android:textSize="55dp"
        android:typeface="monospace"
        android:gravity="center"
        app:autoSizeMaxTextSize="55sp"
        app:autoSizeMinTextSize="10sp"
        app:autoSizeTextType="uniform"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.023" />

    <ImageButton
        android:id="@+id/wow"
        style="@android:style/Widget.Holo.Light.ImageButton"
        android:layout_width="125dp"
        android:layout_height="102dp"
        android:backgroundTint="@color/purple_500"
        android:scaleType="centerCrop"
        android:src="@drawable/wow"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.024"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/shrek"
        app:layout_constraintVertical_bias="0.175" />

    <ImageButton
        android:id="@+id/godfather"
        style="@android:style/Widget.Holo.Light.ImageButton"
        android:layout_width="125dp"
        android:layout_height="102dp"
        android:backgroundTint="@color/purple_500"
        android:scaleType="centerCrop"
        android:src="@drawable/godfather"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/interstellar"
        app:layout_constraintStart_toEndOf="@+id/wow"
        app:layout_constraintTop_toBottomOf="@+id/forrest"
        app:layout_constraintVertical_bias="0.175" />

    <ImageButton
        android:id="@+id/interstellar"
        style="@android:style/Widget.Holo.Light.ImageButton"
        android:layout_width="125dp"
        android:layout_height="102dp"
        android:backgroundTint="@color/purple_500"
        android:scaleType="centerCrop"
        android:src="@drawable/interstellar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.975"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/psycho"
        app:layout_constraintVertical_bias="0.17" />

    <ImageButton
        android:id="@+id/shrek"
        style="@android:style/Widget.Holo.Light.ImageButton"
        android:layout_width="125dp"
        android:layout_height="102dp"
        android:backgroundTint="@color/purple_500"
        android:scaleType="centerCrop"
        android:src="@drawable/shrek"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.024"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dark_knight"
        app:layout_constraintVertical_bias="0.096" />

    <ImageButton
        android:id="@+id/forrest"
        style="@android:style/Widget.Holo.Light.ImageButton"
        android:layout_width="125dp"
        android:layout_height="102dp"
        android:backgroundTint="@color/purple_500"
        android:scaleType="centerCrop"
        android:src="@drawable/forrest"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/psycho"
        app:layout_constraintStart_toEndOf="@+id/shrek"
        app:layout_constraintTop_toBottomOf="@+id/lotr"
        app:layout_constraintVertical_bias="0.096" />

    <ImageButton
        android:id="@+id/psycho"
        style="@android:style/Widget.Holo.Light.ImageButton"
        android:layout_width="125dp"
        android:layout_height="102dp"
        android:layout_marginBottom="288dp"
        android:backgroundTint="@color/purple_500"
        android:scaleType="centerCrop"
        android:src="@drawable/psycho"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.975"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/matrix"
        app:layout_constraintVertical_bias="0.939" />

    <ImageButton
        android:id="@+id/dark_knight"
        style="@android:style/Widget.Holo.Light.ImageButton"
        android:layout_width="125dp"
        android:layout_height="102dp"
        android:backgroundTint="@color/purple_500"
        android:scaleType="centerCrop"
        android:src="@drawable/dark_knight"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.024"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.327" />

    <ImageButton
        android:id="@+id/lotr"
        style="@android:style/Widget.Holo.Light.ImageButton"
        android:layout_width="125dp"
        android:layout_height="102dp"
        android:backgroundTint="@color/purple_500"
        android:scaleType="centerCrop"
        android:src="@drawable/lotr"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/matrix"
        app:layout_constraintStart_toEndOf="@+id/dark_knight"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.327" />

    <ImageButton
        android:id="@+id/matrix"
        style="@android:style/Widget.Holo.Light.ImageButton"
        android:layout_width="125dp"
        android:layout_height="102dp"
        android:backgroundTint="@color/purple_500"
        android:scaleType="centerCrop"
        android:src="@drawable/matrix"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.975"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.327" />

    <Button
        android:id="@+id/back"
        android:layout_width="70dp"
        android:layout_height="50dp"
        android:background="@drawable/button_designed"
        android:drawableTop="@drawable/back_arrow"
        app:layout_constraintBottom_toTopOf="@+id/Level1Title"
        app:layout_constraintEnd_toStartOf="@+id/score"
        app:layout_constraintHorizontal_bias="0.165"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.7" />


</androidx.constraintlayout.widget.ConstraintLayout>

</layout>